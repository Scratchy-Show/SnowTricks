    <body>
        {% for label, messages in app.flashes %}
            <div class="container">
                <div class="alert alert-{{ label }} alert-dismissible text-center">
                    {% for message in messages %}
                        <p>{{ message | raw }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}

        {{ include('shared/header.html.twig') }}

        <div class="container">
            {% block body %} {% endblock %}
        </div>

        {{ include('shared/footer.html.twig') }}
