{% extends "base.html.twig" %}

{% block title %}Ajouter une vidéo{% endblock %}


{% block body %}
    <div class="add-video col-lg-8 col-md-10 mx-auto">

        <h1 class="h1 text-primary text-center">Ajouter une vidéo</h1>

        <p class="text-center mt-5">Pour ajouter une vidéo, coller une balise
            <span class="font-weight-bold">embed</span>
            provenant de la plateforme de votre choix (Youtube, Dailymotion…)</p>

        <div class="mt-4 mb-3 add-video">

            {{ form_start(form) }}

            {{ form_row(form.url) }}

            {{ form_row(form._token) }}

            <div class="text-center">
                <button type="submit" class="col-6 btn btn-success btn-lg">Ajouter</button>
            </div>
        </div>
    </div>
{% endblock %}