{% extends "base.html.twig" %}

{% block title %}Ajouter une vidéo{% endblock %}


{% block body %}
    <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="text-primary text-center">Ajouter une vidéo</h1>

        <p class="text-center mt-5">Pour ajouter une vidéo, coller une balise embed provenant de la plateforme de votre choix (Youtube, Dailymotion…)</p>

        <div class="mt-4 mb-3 add-video">

            {{ form_start(form) }}

            {{ form_row(form.url) }}

            {{ form_row(form._token) }}

            <button type="submit" class="btn btn-success btn-lg col-12">Ajouter</button>
        </div>
    </div>
{% endblock %}