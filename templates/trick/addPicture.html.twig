{% extends "base.html.twig" %}

{% block title %}Ajouter une image{% endblock %}


{% block body %}
    <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="text-primary text-center">Ajouter une image</h1>

        <div class="mt-4 mb-3 add-picture">

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.file, 'Image') }}
                {{ form_widget(form.file) }}
                {{ form_help(form.file) }}
            </div>

            {{ form_row(form._token) }}

            <button type="submit" class="btn btn-success btn-lg col-12">Ajouter</button>
        </div>
    </div>
{% endblock %}