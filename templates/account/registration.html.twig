{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}


{% block body %}
    <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="text-primary text-center">Inscription</h1>

        <div class="mt-4 mb-3">
            {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm) }}
            <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i>Créer un compte</button>
            <u><a href="{{ path('login') }}" class="d-block d-md-none mt-3 text-center text-primary">Déjà un compte ?</a></u>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}