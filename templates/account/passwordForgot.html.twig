{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié{% endblock %}


{% block body %}
    <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="text-primary text-center">Mot de passe oublié</h1>

        <div class="mt-4 mb-3">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i>Demander la réinitialisation du mot de passe</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}