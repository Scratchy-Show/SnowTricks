{% extends "base.html.twig" %}

{% block title %}Mot de passe oublié{% endblock %}


{% block body %}
    <div class="password-forgot col-lg-8 col-md-10 mx-auto">

        <h1 class="h1 text-primary text-center">Mot de passe oublié</h1>

        <div class="mt-4 mb-3">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <div class="text-center">
                <button type="submit" class="col-6 btn btn-success btn-lg">
                    Réinitialisation du mot de passe
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}